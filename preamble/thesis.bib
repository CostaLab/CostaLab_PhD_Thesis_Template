@article {Cusanovich2015,
	author = {Cusanovich, Darren A. and Daza, Riza and Adey, Andrew and Pliner, Hannah A. and Christiansen, Lena and Gunderson, Kevin L. and Steemers, Frank J. and Trapnell, Cole and Shendure, Jay},
