	issn = {1476-4687},
	journal = {Nature},
	number = {7726},
	pages = {281--285},
	title = {{Principles of nucleosome organization revealed by single-cell micrococcal nuclease sequencing}},
	url = {https://doi.org/10.1038/s41586-018-0567-3},
	volume = {562},
	year = {2018}
}


